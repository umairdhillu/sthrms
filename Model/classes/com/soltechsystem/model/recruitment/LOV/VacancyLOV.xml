<ViewObject
  xmlns="http://xmlns.oracle.com/bc4j"
  Name="VacancyLOV"
  Version="12.2.1.12.24"
  InheritPersonalization="merge"
  BindingStyle="OracleName"
  CustomQuery="true"
  PageIterMode="Full">
  <DesignTime>
    <Attr Name="_isExpertMode" Value="true"/>
  </DesignTime>
  <Properties>
    <SchemaBasedProperties>
      <LABEL
        ResId="com.soltechsystem.model.recruitment.LOV.VacancyLOV_LABEL"/>
    </SchemaBasedProperties>
  </Properties>
  <SQLQuery><![CDATA[select vacancy_id, vacancy_title,hd.department_name,hj.job_title  
from hr_vacancies hv, 
    hr_departments hd, 
    hr_jobs hj 
where hv.department = hd.department_id 
and hj.job_id = hv.designation]]></SQLQuery>
